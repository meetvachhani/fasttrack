#include<stdio.h>
void input(int a[],int *n,int *k)
{
    printf("Enter the number of elements : ");
    scanf("%d",n);
    printf("Enter the elements : \n");
    for(int i=1;i<=*n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("Enter the key element : ");
    scanf("%d",k);
}
void b_search(int a[],int n,int k,int *mid)
{
    int beg,end;
    beg=1;
    end=n;
    *mid=(beg=end)/2;
    while(beg<=end && a[*mid]!=k)
    {
        if(a[*mid]<k)
        {
            beg=*mid+1;
        }
        else
        {
            end=*mid+1;
        }
        *mid=(beg+end)/2;
    }
}
void output(int a[],int mid,int k)
{
    if(a[mid]==k)
    {
        printf("Key Element %d is found at location : %d",k,mid);
    }
    else
    {
        printf("Key Element is not present !!");
    }
}
int main()
{
    int a[100],n,k,mid;
    input(a,&n,&k);
    b_search(a,n,k,&mid);
    output(a,mid,k);
}







