#include<stdio.h>
int rows()
{
    int a;    
    printf("Enter the number of rows : ");
	  scanf("%d",&a);
	  return (a);
}
int print_triangle(int n)
{
	for(int i=1;i<=n;i++)
	{ 
		for(int j=i;j<n;j++)
		{
			printf(" ");
		}
		for(int j=1;j<2*i;j++)
		{
		       printf("*");
		}
		printf("\n");
	}
}
int main()
{
	int x;
	x=rows();
	print_triangle(x);
}
